<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.softlab.okr.mapper.TagMapper">
    <resultMap id="tagMap" type="com.softlab.okr.model.entity.Tag">
        <id property="tagId" column="tag_id"/>
        <result property="name" column="name"/>
    </resultMap>

    <sql id="baseColumn">
        `tag_id`,`name`
    </sql>

    <select id="selectList" resultMap="tagMap">
        select
        <include refid="baseColumn"></include>
        from `tag`
    </select>

    <insert id="insertBook">
        insert into
        `tag`(<include refid="baseColumn"></include>)
        values
        (#{tagId},#{name})
    </insert>

    <delete id="deleteById">
        delete from `tag`
        where tag_id in
        <foreach collection="tagIds" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <update id="updateById">
        update `tag` set
        `tag_id`=#{tagId},
        `name`=#{name},
    </update>


</mapper>
