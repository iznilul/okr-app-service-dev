<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.softlab.okr.mapper.TaskMapper">

  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap" type="com.softlab.okr.entity.Task">
    <id column="task_id" property="taskId"/>
    <result column="name" property="name"/>
    <result column="class_name" property="className"/>
    <result column="function" property="function"/>
  </resultMap>

  <!-- 通用查询结果列 -->
  <sql id="Base_Column_List">
        task_id, `name`, class_name, `function`
    </sql>

  <insert id="insertBatch">
    insert into `task`(task_id,`name`,class_name,`function`)
    values
    <foreach collection="list" item="item" separator=",">
      (#{item.taskId},#{item.name},#{item.className},#{item.function})
    </foreach>
  </insert>
</mapper>
