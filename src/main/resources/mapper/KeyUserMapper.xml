<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itlab.blog.mapper.KeyUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.itlab.blog.entity.KeyUser">
        <id column="id" property="id"/>
        <result column="key_id" property="keyId"/>
        <result column="user_id" property="userId" />
        <result column="status" property="status"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        `id`,key_id, user_id,`update_time`
    </sql>

    <select id="selectKeyUserVO" resultType="com.itlab.blog.model.vo.KeyUserVO">
        select
        ku.id,
        ky.key_name,
        ui.name,
        ku.status,
        ku.update_time
        from key_user ku
        join `key` ky on ku.key_id=ky.key_id and ky.delete_flag=0
        join `user_info` ui on ku.user_id=ui.user_id
        order by ku.id desc
    </select>

</mapper>
