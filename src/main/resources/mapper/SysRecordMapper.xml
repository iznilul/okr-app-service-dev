<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itlab.blog.mapper.SysRecordMapper">

    <resultMap id="BaseResultMap" type="com.itlab.blog.entity.SysRecord">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="path" column="path"/>
        <result property="username" column="username"/>
        <result property="ip" column="ip"/>
        <result property="updateTime" column="update_time"/>
        <result property="duration" column="duration"/>
    </resultMap>

    <sql id="Base_Column_List">
    `id`,`name`,`path`,`username`,`ip`,`update_time`,`duration`
  </sql>

    <select id="selectSysRecord" resultType="com.itlab.blog.model.vo.SysRecordVO">
        select
        id,
        `name`,
        path,
        username,
        ip,
        update_time,
        duration
        from `sys_record`
        where 1=1
        <if test="username!='' and username!=null">
            and username like concat('%',#{username},'%')
        </if>
        <if test="beginTime!='' and beginTime!=null">
            and unix_timestamp(update_time)&gt;=unix_timestamp(#{beginTime})
        </if>
        <if test="endTime!='' and endTime!=null">
            and unix_timestamp(update_time)&lt;=unix_timestamp(#{endTime})
        </if>
        order by id desc
    </select>
</mapper>

